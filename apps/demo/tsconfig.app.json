{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [],
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true,
    "enableIvy": true
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["**/*.ts"],
  "exclude": [
    "src/test-setup.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/**/*.worker.ts",
    "jest.config.ts"
  ]
}
