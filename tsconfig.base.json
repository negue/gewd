{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@gewd/markdown": [
        "libs/markdown/module/index.ts"
      ],
      "@gewd/markdown/*.worker": [
        "libs/markdown/*.worker.ts"
      ],
      "@gewd/markdown/contracts": [
        "libs/markdown/contracts"
      ],
      "@gewd/markdown/emoji-map": [
        "libs/markdown/emoji-map"
      ],
      "@gewd/markdown/extended": [
        "libs/markdown/extended"
      ],
      "@gewd/markdown/module": [
        "libs/markdown/module"
      ],
      "@gewd/markdown/service": [
        "libs/markdown/service"
      ],
      "@gewd/markdown/utils": [
        "libs/markdown/utils"
      ],
      "@gewd/markdown/worker-functions": [
        "libs/markdown/worker-functions"
      ],
      "@gewd/lazy": [
        "libs/lazy/src"
      ],
      "@gewd/lazy/contracts": [
        "libs/lazy/contracts"
      ],
      "@gewd/lazy/loader": [
        "libs/lazy/loader"
      ],
      "@gewd/lazy/registry": [
        "libs/lazy/registry"
      ],
      "@gewd/lazy/utils": [
        "libs/lazy/utils"
      ],
      "@gewd/ng-utils": [
        "libs/ng-utils/src"
      ],
      "@gewd/ng-utils/bootstrap-component": [
        "libs/ng-utils/bootstrap-component"
      ],
      "@gewd/ng-utils/components": [
        "libs/ng-utils/components"
      ],
      "@gewd/ng-utils/css-props": [
        "libs/ng-utils/css-props"
      ],
      "@gewd/ng-utils/dynamic-portal": [
        "libs/ng-utils/dynamic-portal"
      ],
      "@gewd/ng-utils/fullscreen-panel": [
        "libs/ng-utils/fullscreen-panel"
      ],
      "@gewd/ng-utils/morphdom": [
        "libs/ng-utils/morphdom"
      ],
      "@gewd/ng-utils/ng-error-overlay": [
        "libs/ng-utils/ng-error-overlay"
      ],
      "@gewd/ng-utils/ng-inspect": [
        "libs/ng-utils/ng-inspect"
      ],
      "@gewd/ng-utils/pipes": [
        "libs/ng-utils/pipes"
      ],
      "@gewd/mat-utils": [
        "libs/mat-utils/src"
      ],
      "@gewd/mat-utils/material-icons": [
        "libs/mat-utils/material-icons"
      ],
      "@gewd/mat-utils/custom-form-control": [
        "libs/mat-utils/custom-form-control"
      ],
      "@gewd/components": [
        "libs/components/src"
      ],
      "@gewd/components/auto-scale": [
        "libs/components/auto-scale"
      ],
      "@gewd/components/codemirror": [
        "libs/components/codemirror"
      ],
      "@gewd/components/highlight-editor": [
        "libs/components/highlight-editor"
      ],
      "@gewd/utils": [
        "libs/utils/src"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ],
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true,
    "enableIvy": false
  }
}
